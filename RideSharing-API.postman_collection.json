{
  "info": {
    "name": "Ride Sharing API",
    "description": "Complete API collection for Ride Sharing Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8081",
      "type": "string"
    },
    {
      "key": "userToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "driverToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "rideId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"alice\",\n  \"password\": \"password123\",\n  \"role\": \"ROLE_USER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Register Driver",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"bob\",\n  \"password\": \"driver123\",\n  \"role\": \"ROLE_DRIVER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"userToken\", jsonData.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"alice\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Login Driver",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"driverToken\", jsonData.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"bob\",\n  \"password\": \"driver123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "User Operations",
      "item": [
        {
          "name": "Create Ride",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"rideId\", jsonData.id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pickupLocation\": \"Koramangala\",\n  \"dropLocation\": \"Indiranagar\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/rides",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rides"]
            }
          }
        },
        {
          "name": "Get My Rides",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/user/rides",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "user", "rides"]
            }
          }
        }
      ]
    },
    {
      "name": "Driver Operations",
      "item": [
        {
          "name": "Get Pending Rides",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{driverToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/driver/rides/requests",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "driver", "rides", "requests"]
            }
          }
        },
        {
          "name": "Accept Ride",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{driverToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/driver/rides/{{rideId}}/accept",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "driver", "rides", "{{rideId}}", "accept"]
            }
          }
        }
      ]
    },
    {
      "name": "Ride Operations",
      "item": [
        {
          "name": "Complete Ride (User)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/rides/{{rideId}}/complete",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rides", "{{rideId}}", "complete"]
            }
          }
        },
        {
          "name": "Complete Ride (Driver)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{driverToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/rides/{{rideId}}/complete",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rides", "{{rideId}}", "complete"]
            }
          }
        }
      ]
    }
  ]
}
